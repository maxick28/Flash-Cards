<% collections.each do |collection| %>
  <div class="col">
    <div class="card my-3 shadow rounded">
      <div class="card-body">
        <div class='d-flex'>
          <h5 class="card-title"><%= collection.title %></h5>
          <p class='ml-auto'>(<%= pluralize(collection.cards.count, 'card') %>)</p>
        </div>
        <p class="card-text"><%= collection.description %></p>
        <% if current_user %>
          <%= link_to 'View', collection, class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>