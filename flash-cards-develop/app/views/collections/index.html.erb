<div class='container my-5'>
<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>

<br>

<h1 class='text-center'>Choose card collection:</h1>
<% if !current_user %>
  <div class="alert alert-warning mx-auto", style='max-width: 600px;'>
   You need to sing up or log in to have access to the cards!
  </div>
<% end %>
<% if params[:category_id] %>
  <h4 class='text-center'>Category: <%= Category.find(params[:category_id]).name %></h4>
<% else %>
  <h4 class='text-center'>(all categories)</h4>
<% end %>
<div class="container">

<div class="row row-cols-1 row-cols-md-2 g-4 my-3">
  <%= render 'collection', collections: @collections %>
</div>
</div>

<% if current_user %>
<div class='d-flex justify-content-center'>
  <%= link_to 'Add new collection', new_collection_path, class: 'btn btn-primary'%>
</div>
<% end %>

</div>
</div>
