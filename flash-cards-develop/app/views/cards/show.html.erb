<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>

<%= render 'card', card: @card %>

<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-md-auto">
      <%= button_to "New", new_collection_card_path, method: :get, class: "btn btn-primary" %>
    </div>
    <div class="col-md-auto">
      <%= button_to "Edit", edit_collection_card_path(@collection, @card), method: :get, class: "btn btn-warning" %>
    </div>
    <div class="col-md-auto">
      <%= button_to "Destroy",
              collection_card_path(@collection, @card),
              method: :delete,
              data: { confirm: 'Are you sure?' },
              class: "btn btn-danger" %>
    </div>
  </div>
</div>
